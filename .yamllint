---
extends: default

rules:
  document-start: disable
  line-length: disable
  new-lines: disable
  new-line-at-end-of-file: disable
  truthy: disable
  comments-indentation: disable
  empty-lines:
    level: warning
  hyphens:
    level: warning
  indentation:
    level: warning
    indent-sequences: false
  comments:
    require-starting-space: true
    ignore-shebangs: true
    min-spaces-from-content: 1
